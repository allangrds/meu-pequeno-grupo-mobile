{
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 11,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "@typescript-eslint/semi": [
        "error",
        "never"
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src"],
          "alias": {
            "_assets": "./src/assets",
            "_components": "./src/components",
            "_containers": "./src/containers",
            "_scenes": "./src/scenes"
          }
        }
      }
    }
}
